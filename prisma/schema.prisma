generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum Role {
  ADMIN
  SHOP_OWNER
  DELIVERY_BOY
  SUPPLIER
}

enum UserStatus {
  PENDING
  APPROVED
  REJECTED
  SUSPENDED
}

model User {
  id        String     @id @default(cuid())
  name      String
  email     String     @unique
  phone     String     @unique
  password  String
  address   String
  shopName  String?
  role      Role       @default(SHOP_OWNER)
  status    UserStatus @default(PENDING)
  createdAt DateTime   @default(now())
}

model Advertisement {
  id          String   @id @default(cuid())
  title       String
  imageUrl    String
  category    String   // "ANNOUNCEMENT" | "PRODUCT"
  hyperlink   String?
  isVisible   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PromotionModal {
  id        String   @id @default(cuid())
  title     String
  imageUrl  String
  hyperlink String?
  isVisible Boolean  @default(false) // default false
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
